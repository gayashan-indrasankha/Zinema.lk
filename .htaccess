# Enable GZIP compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript application/xml application/xhtml+xml application/rss+xml application/javascript application/x-javascript application/json
</IfModule>

# Enable browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 1 day"
    ExpiresDefault "access plus 1 month"
</IfModule>

# Cache-Control headers for Cloudflare CDN
<IfModule mod_headers.c>
    # Images - Long cache with immutable flag (Cloudflare optimized)
    <FilesMatch "\.(jpg|jpeg|png|gif|webp|svg|ico)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>
    
    # CSS/JS - Shorter cache for updates
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=2592000"
    </FilesMatch>
</IfModule>

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-XSS-Protection "1; mode=block"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set Strict-Transport-Security "max-age=31536000; includeSubDomains"
</IfModule>

# Prevent directory listing
Options -Indexes

# Redirect www to non-www
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www\.(.*)$ [NC]
RewriteRule ^(.*)$ https://%1/$1 [R=301,L]

# Force HTTPS
RewriteCond %{HTTPS} off
RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# =========================================================
# CLEAN URL REWRITE RULES
# =========================================================

# Sitemap rewriting
RewriteRule ^sitemap\.xml$ sitemap.php [L]

# 1. Movie Details: /movie/123/movie-title -> movie-details.php?id=123
RewriteRule ^movie/([0-9]+)/?.*$ movie-details.php?id=$1 [L,QSA]

# 2. TV Series Details: /series/123/series-title -> series-details.php?id=123
RewriteRule ^series/([0-9]+)/?.*$ series-details.php?id=$1 [L,QSA]

# 3. Collection Details: /collection/123/collection-name -> collection-details.php?id=123
RewriteRule ^collection/([0-9]+)/?.*$ collection-details.php?id=$1 [L,QSA]

# 3. Clean Pages (optional but good practice)
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([a-z0-9-]+)/?$ $1.php [L,QSA]

# Custom error pages
ErrorDocument 404 /404.html
ErrorDocument 500 /500.html